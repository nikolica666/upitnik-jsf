<server description="JSF Questionnaire App">

    <featureManager>
        <feature>javaee-7.0</feature>
    </featureManager>

    <basicRegistry id="basic" realm="WebRealm">
        <user name="nikola" password="nikola123" />
    </basicRegistry>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080"
                  httpsPort="9443"/>

    <dataSource
            id="DevDataSource"
            jndiName="jdbc/MyDS"
            type="javax.sql.ConnectionPoolDataSource">

        <jdbcDriver
                javax.sql.ConnectionPoolDataSource="org.h2.jdbcx.JdbcDataSource"
                javax.sql.DataSource="org.h2.jdbcx.JdbcDataSource"
                javax.sql.XADataSource="org.h2.jdbcx.JdbcDataSource"
                libraryRef="h2Lib" />
        <!-- In-memory, Oracle mode -->
        <properties
                url="jdbc:h2:mem:devdb;DB_CLOSE_DELAY=-1;MODE=Oracle"
                user="sa"
                password="" />
    </dataSource>

    <library id="h2Lib">
        <!-- zadnja koja podrÅ¾ava Javu 8 je 2.1.214 -->
        <fileset dir="${server.config.dir}/lib/global/jdbc" includes="h2-2.1.214.jar" />
    </library>

    <applicationManager autoExpand="true"/>

    <webApplication location="upitnik-jsf.war" contextRoot="/"/>

</server>