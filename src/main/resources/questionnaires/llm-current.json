{
  "id": "llm-current",
  "title": "Trenutno korištenje LLM-ova",
  "description": "Opišite trenutno korištenje LLM-ova",
  "version": 1,
  "questions": [
    {
      "id": "fullName",
      "type": "text",
      "label": "Your full name",
      "placeholder": "e.g., Ana Horvat",
      "required": true,
      "help": "Upišite vaše puno ime i prezime",
      "validators": {
        "minLength": 3,
        "maxLength": 80,
        "pattern": null
      }
    },
    {
      "id": "dept",
      "type": "single",
      "label": "Department",
      "required": true,
      "options": [
        { "value": "eng", "label": "Engineering" },
        { "value": "sales", "label": "Sales" },
        { "value": "ops", "label": "Operations" }
      ]
    },
    {
      "id": "dept-multi",
      "type": "multi",
      "label": "Department",
      "required": true,
      "options": [
        { "value": "eng", "label": "Engineering" },
        { "value": "sales", "label": "Sales" },
        { "value": "ops", "label": "Operations" }
      ]
    },
    {
      "id": "satisfaction",
      "type": "rating",
      "label": "How satisfied are you with the hiring process?",
      "required": true,
      "scale": 5
    },
    {
      "id": "bio",
      "type": "textarea",
      "label": "Short bio",
      "required": false,
      "validators": { "maxLength": 500 }
    },
    {
      "id": "startDate",
      "type": "date",
      "label": "Planned start date",
      "required": true
    }
  ]
}